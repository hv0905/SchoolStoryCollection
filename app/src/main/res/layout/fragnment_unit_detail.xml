<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/ui_margin_mid"
        >

        <TextView
            android:id="@+id/title"
            style="@style/textWindowTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/ui_margin_mid"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="23123123123" />


        <android.support.design.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:id="@+id/closeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/white"
            app:icon="@drawable/ic_close_white_24dp"
            app:iconTint="@color/white"
            android:text="@string/close"
            app:rippleColor="@color/white"
            />

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ui_margin_large"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/textTitle"
            android:text="@string/info"
            android:drawableStart="@drawable/ic_info_black_24dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/textTitle"
            android:text="@string/stat"
            android:drawableStart="@drawable/ic_bar_graph_black_24dp"
            />
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/difficultyPie"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>

    </LinearLayout>


    <android.support.design.button.MaterialButton
        android:id="@+id/resetBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_repeat_black_24dp"
        android:layout_marginLeft="@dimen/ui_margin_mid"
        android:layout_marginRight="@dimen/ui_margin_mid"
        android:text="重置统计信息"/>

    <android.support.design.button.MaterialButton
        app:backgroundTint="@color/danger"
        android:id="@+id/rmBtn"
        android:layout_marginLeft="@dimen/ui_margin_mid"
        android:layout_marginRight="@dimen/ui_margin_mid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_delete_black_24dp"
        android:text="删除"/>

</LinearLayout>
