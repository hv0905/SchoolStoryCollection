<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/valTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_book_black_24dp"
            android:gravity="center|start"
            android:textColor="@color/black"
            tools:text="hello world" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/questionCount"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/valQuestionCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="val"
                />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/QuestionRatio"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/valQuestionRatio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="val"/>

        </android.support.constraint.ConstraintLayout>

        <ProgressBar
            android:id="@+id/questionRatioBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:progress="30" />


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quizTime"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/valQuizCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="val"/>
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/correctRatio"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/valCorrectRatio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="val"
                />

        </android.support.constraint.ConstraintLayout>

        <ProgressBar
            android:id="@+id/correctRatioBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:progress="30" />

        <TextView
            android:id="@+id/warningTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/times_too_few_warn"
            android:textColor="@color/danger"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.button.MaterialButton
                android:id="@+id/resetBtn"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/reset_info" />

            <android.support.design.button.MaterialButton
                android:id="@+id/rmBtn"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/rm_unit" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
