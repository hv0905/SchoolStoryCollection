<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp">
<android.support.constraint.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
>

    <ImageView
        android:id="@+id/headImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_book_black_24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:contentDescription="@string/title_activity_learning_unit_manage" />

    <TextView
        android:id="@+id/valTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/headImg"
        app:layout_constraintBottom_toBottomOf="@id/headImg"
        />

    <TextView
        android:id="@+id/titleQuizCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/quizTime"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/valTitle"

        />

    <TextView
        android:id="@+id/valQuizCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/titleQuizCount"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="32dp"
        />

    <TextView
        android:id="@+id/titleCorrectRatio"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:text="@string/correctRatio"
    android:textColor="@color/black"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@id/titleQuizCount" />

    <TextView
        android:id="@+id/valCorrectRatio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/titleCorrectRatio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/titleCorrectRatio" />

    <ProgressBar
        android:id="@+id/correctRatioBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:progress="30"
        app:layout_constraintEnd_toStartOf="@id/valCorrectRatio"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/valCorrectRatio"
        app:layout_constraintTop_toBottomOf="@+id/titleCorrectRatio" />

    <TextView
        android:id="@+id/warningTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/times_too_few_warn"
        android:textColor="@color/colorAccent"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/correctRatioBar" />

    <android.support.design.button.MaterialButton
        android:id="@+id/resetBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:text="@string/reset_info"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/warningTxt" />

    <android.support.design.button.MaterialButton
        android:id="@+id/rmBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:text="@string/rm_unit"
        app:layout_constraintLeft_toRightOf="@id/resetBtn"
        app:layout_constraintTop_toBottomOf="@id/warningTxt" />

</android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
