<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textTitle"
        android:text="@string/answer"
        android:drawableStart="@drawable/ic_key_black_24dp"
        />

    <FrameLayout
        android:id="@+id/answerContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ui_margin_mid"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textTitle"
        android:text="@string/analysis"
        android:drawableStart="@drawable/ic_insert_comment_black_24dp"
        />

    <TextView
        android:id="@+id/analysisText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textIsSelectable="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <net.sakuratrak.schoolstorycollection.ImageDisplayView
            android:id="@+id/analysisImgDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            />
    </RelativeLayout>
</LinearLayout>
